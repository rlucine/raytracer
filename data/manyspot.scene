# Draw a complex image
eye 8 8 20
viewdir -0.4 -0.4 -1
updir 1 1 0
fovv 60
imsize 200 200
bkgcolor 0 0 0

# Lights
spotlight -10 0 12 1 0 -1 15 1 0.8 0.8
spotlight 10 0 12 -1 0 -1 15 0.8 0.8 1
spotlight 0 -10 12 0 1 -1 15 0.8 1 0.8

# Main body
mtlcolor 0.3 0.3 0.3 1 1 1 0 0.5 0.5 16 1 1
sphere 1 0 -4 6
sphere -1 0 -4 6
sphere 0 -1 -4 6

# Face
mtlcolor 0.6 0.3 0.6 1 1 1 0 0.3 0.7 50 1 1
sphere 0 0 0 3
sphere 1 0 1 2
sphere -1 0 1 2
sphere 0 -1 1 2

# Smaller particles
mtlcolor 0.6 0.6 1 1 1 1 0 0.5 0.5 16 1 1
sphere 2 0 2 1
sphere -2 0 2 1
sphere 0 -2 2 1

sphere 4 0 4 0.5
sphere -4 0 4 0.5
sphere 0 -4 4 0.5

sphere 6 0 6 0.25
sphere -6 0 6 0.25
sphere 0 -6 6 0.25

sphere 8 0 8 0.125
sphere -8 0 8 0.125
sphere 0 -8 8 0.125

# Side parts
mtlcolor 0 0.15 0.15 1 1 1 0 0.3 0.7 50 1 1
ellipsoid 8 0 -4 4 1 1
ellipsoid -8 0 -4 4 1 1
ellipsoid 0 -8 -4 1 4 1

sphere 13 0 -4 0.5
sphere -13 0 -4 0.5
sphere 0 -13 -4 0.5

sphere 16 0 -4 0.25
sphere -16 0 -4 0.25
sphere 0 -16 -4 0.25

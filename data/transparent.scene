# Render a transparent sphere
eye -0.7 -0.7 0.7
viewdir 1 1 -1
updir 1 1 0
fovv 80
imsize 512 512
bkgcolor 0.2 0.2 0.2
light 1 1 -1 0 1 1 1
light 1 0 0 0 0.5 0.5 0.5

mtlcolor 1 0 0 1 1 1 0.2 0.4 0.4 10 0.2 2.5
sphere 0 0 0 0.5

mtlcolor 0 0 0 1 1 1 0.2 0.4 0.4 10 1 0
texture data/texture/noise.ppm
v -1 1 0
v 1 1 0
v -1 -1 0
v 1 -1 0

vn 0 0 1

vt 0 0
vt 1 0
vt 0 1
vt 1 1

f 1/1/1 3/3/1 2/2/1
f 3/3/1 4/4/1 2/2/1

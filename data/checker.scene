# Render a checkerboard
eye -1.5 -1.5 0.75
viewdir 1.5 1.5 -0.5
updir 1 1 0
fovv 80
imsize 512 512
bkgcolor 0.2 0.2 0.2
light 1 1 -1 0 1 1 1
light 1 0 0 0 0.5 0.5 0.5

mtlcolor 0 0.5 0.5 1 1 1 0.2 0.4 0.4 10 1 1.1
sphere 0 0 0.75 0.5

mtlcolor 0.5 0 0 1 1 1 0.2 0.4 0.4 10 1 0.3
sphere 0 -0.5 0.2 0.2

mtlcolor 0 0.5 0 1 1 1 0.2 0.4 0.4 10 1 0
v -1 0.5 0.5
v -1 -0 1.3
v -1 -0.5 0.5
f 1 3 2

texture data/texture/checker.ppm
v -1 1 0
v 1 1 0
v -1 -1 0
v 1 -1 0

vn 0 0 1

vt 0 0
vt 1 0
vt 0 1
vt 1 1

f 4/1/1 6/1/3 5/1/2
f 6/1/3 7/1/4 5/1/2

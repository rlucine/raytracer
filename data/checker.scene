# Render a checkerboard
eye 2 0 0.5
viewdir -1 0 -0.25
updir 0 0 1
fovv 60
imsize 200 200
bkgcolor 0.2 0.2 0.2
mtlcolor 0 0.5 0.5 1 1 1 1 0 0 10
texture data/texture/checker.ppm
parallel

v -1 1 0
v 1 1 0
v -1 -1 0
v 1 -1 0

vn 0 0 1

vt 0 0
vt 1 0
vt 0 1
vt 1 1

f 1/1/1 3/1/3 2/1/2
f 3/1/3 4/1/4 2/1/2

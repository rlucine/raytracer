# Render a bubble
eye 2 0 2
viewdir -1 0 -1
updir 0 0 1
fovv 80
imsize 512 512
bkgcolor 0.2 0.2 0.2
light 1 1 -1 0 1 1 1
light 1 0 0 0 0.5 0.5 0.5

# Bubble
mtlcolor 0 0 0 1 1 1 0.2 0.4 0.4 10 0.2 1.33
sphere 0 0 0.5 0.48

mtlcolor 0 0 0 1 1 1 0.2 0.4 0.4 10 0 1
sphere 0 0 0.5 0.46

# Red plane
mtlcolor 1 0 0 1 1 1 0.2 0.4 0.4 10 1 1
v -1 1 0
v 1 1 0
v -1 -1 0
v 1 -1 0

vn 0 0 1

vt 0 0
vt 1 0
vt 0 1
vt 1 1

f 1/1/1 3/3/1 2/2/1
f 3/3/1 4/4/1 2/2/1